<html>
    <head>
        <style>
            table{
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
            td,th{
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>
    <body>
        <h3 style="text-align: center;">Restaurant Management System</h3>
        <table>
            <tr>
                <th>Name: <%= name %></th>
                <th>Email: <%= email %></th>
            </tr>
             <tr>
                <th>Contact Number: <%= contactNum %></th>
                <th>Payment Method: <%= paymentMethod %></th>
            </tr>
        </table>
        <h3>Product Details: </h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
            <% if(productDetails.length>0) { %>
                <% productDetails.forEach(product=> { %>
                    <tr>
                        <td><%= product.productName %></td>
                        <td><%=  product.categoryIName %></td>
                        <td><%=  product.quantity %></td>
                        <td><%= product.price %></td>
                        <td><%= product.total %></td>
                    </tr>
                    <% }); %>
                    <% }%>
        </table>
        <h3>Total: <%= totalAmount%></h3>
        <h3>Thankyou for visiting. You're Welcomed again</h3>
    </body>
</html>